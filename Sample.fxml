<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
    
    <center> 
        <VBox alignment="CENTER" prefWidth="300" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30" left="20" right="20" top="30" />
            </padding>
            <children>
                
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="AirSuite" styleClass="text-title">
                    <font>
                        <Font name="System Bold" size="18.0" /> 
                    </font>
                </Text>
                
                <Region prefHeight="20" VBox.vgrow="SOMETIMES" />
                
                <Text text="FROM:" styleClass="text-subtitle" /> 
                <ComboBox fx:id="start" prefWidth="250.0" promptText="From Where?" />
                
                <Text text="TO:" styleClass="text-subtitle" />
                <ComboBox fx:id="destination" prefWidth="250.0" promptText="Where to?" />
                
                <Text text="Departure Date:" styleClass="text-subtitle" />
                <DatePicker fx:id="depDate" editable="true" prefWidth="250.0" promptText="Departure Date" />
                
                <Button fx:id="search" mnemonicParsing="false" onAction="#handleSearch" text="Search" styleClass="button-main" />
                
            </children>
        </VBox>
    </center>
</BorderPane>