<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController3">

    <top>
        <VBox alignment="TOP_CENTER" prefHeight="150.0" BorderPane.alignment="CENTER">
            <children>
                <Text fx:id="infoTitleText" strokeType="OUTSIDE" strokeWidth="0.0" text="Flight Route" textAlignment="CENTER" styleClass="text-title">
                    <VBox.margin>
              
          <Insets top="20.0" />
                    </VBox.margin>
                </Text>

                <Text fx:id="infoDetailsText" strokeType="OUTSIDE" strokeWidth="0.0" text="Flight Details" textAlignment="CENTER" styleClass="text-subtitle">
                    <VBox.margin>
                        <Insets top="5.0" bottom="10.0" />
                    </VBox.margin>
                </Text>
                
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Please select a seat" styleClass="text-subtitle">
             
      <font>
                      <Font name="System Bold" size="15.0" />
                   </font>
                    <VBox.margin>
                        <Insets top="15.0" bottom="10.0" />
  
                  </VBox.margin>
                </Text>
            </children>
        </VBox>
    </top>
    
    <center>
        <GridPane fx:id="seatGrid" hgap="15" vgap="15" BorderPane.alignment="CENTER" alignment="CENTER" />
    </center>
    
    <bottom>
        
<AnchorPane prefHeight="70.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" text="Back" styleClass="button-main"
                        AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" />
                        
               
 <Button fx:id="buyTicketButton" mnemonicParsing="false" text="Buy Ticket" disable="true" 
                        onAction="#handleBuyTicket" 
                        AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" 
                        styleClass="button-main" />
            </children>
    
    </AnchorPane>
    </bottom>
</BorderPane>